@model TNPLCommerce.Domain.UserModels.User

<div class="container p-3">
    @if (Model != null)
    {

    <h1>Welcome Home @Model.Email !!</h1>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>UserId</th>
                <th>Email</th>
                <th>User Role</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td width="30%">@Model.UserId</td>
                <td width="40%">@Model.Email</td>
                <td width="30%">@Model.UserRole</td>
            </tr>
        </tbody>
    </table>
    }
    else
    {
        <h1>Welcome Home!!</h1>
    }
</div>